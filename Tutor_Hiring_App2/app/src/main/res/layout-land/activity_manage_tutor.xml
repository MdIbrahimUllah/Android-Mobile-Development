<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageTutorActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical">
    <TextView
        android:id="@+id/manage_tutor_activity_choose_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_tutor_activity_choose_text_view"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/update_tutor_info_button"
        android:layout_width="250dp"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/update_tutor_info_button"/>

    <Button
        android:id="@+id/manage_tutor_activity_exit_button"
        android:layout_width="250dp"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/manage_tutor_activity_exit_button"/>
    </LinearLayout>

</FrameLayout>