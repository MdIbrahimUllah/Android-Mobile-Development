<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentRegisterActivity">

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="top|center_horizontal"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/parent_register_msg_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_register_msg_text_view"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|left"
            android:orientation="vertical">

        <TextView
            android:id="@+id/parent_first_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_first_name_text_view"/>

        <EditText
            android:id="@+id/parent_first_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_first_name_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_last_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_last_name_text_view"/>

        <EditText
            android:id="@+id/parent_last_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_last_name_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_civic_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_civic_number_text_view"/>

        <EditText
            android:id="@+id/parent_civic_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_civic_number_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_street_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_street_name_text_view"/>

        <EditText
            android:id="@+id/parent_street_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_street_name_edit_text"
            android:autofillHints="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
            android:id="@+id/parent_app_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_app_number_text_view"/>

        <EditText
            android:id="@+id/parent_app_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_app_number_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_city_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_city_name_text_view"/>

        <EditText
            android:id="@+id/parent_city_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_city_name_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_province_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_province_name_text_view"/>

        <EditText
            android:id="@+id/parent_province_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_province_name_edit_text"
            android:autofillHints="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_marginRight="10dp"
            android:layout_gravity="center|right"
            android:orientation="vertical">

        <TextView
            android:id="@+id/parent_postal_code_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_postal_code_text_view"/>

        <EditText
            android:id="@+id/parent_postal_code_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_postal_code_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_country_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_country_name_text_view"/>

        <EditText
            android:id="@+id/parent_country_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_country_name_edit_text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/parent_tel_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_tel_number_text_view"/>

        <EditText
            android:id="@+id/parent_tel_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/parent_tel_number_edit_text"
            android:autofillHints="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical">
        <Button
            android:id="@+id/parent_activity_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_activity_register_button"/>
        </LinearLayout>

    </FrameLayout>