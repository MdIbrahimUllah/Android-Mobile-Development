<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageParantActivity">

    <TextView
        android:id="@+id/manage_parent_activity_choose_text_view"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="@string/manage_parent_activity_choose_text_view"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/find_tutor_button"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:text="@string/find_tutor_button"
        app:layout_constraintEnd_toEndOf="@+id/manage_parent_activity_choose_text_view"
        app:layout_constraintStart_toStartOf="@+id/manage_parent_activity_choose_text_view"
        app:layout_constraintTop_toBottomOf="@+id/manage_parent_activity_choose_text_view" />

    <Button
        android:id="@+id/update_Parent_info_button"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/update_Parent_info_button"
        app:layout_constraintEnd_toEndOf="@+id/find_tutor_button"
        app:layout_constraintStart_toStartOf="@+id/find_tutor_button"
        app:layout_constraintTop_toBottomOf="@+id/find_tutor_button" />

    <Button
        android:id="@+id/manage_child_button"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/manage_child_button"
        app:layout_constraintEnd_toEndOf="@+id/update_Parent_info_button"
        app:layout_constraintStart_toStartOf="@+id/update_Parent_info_button"
        app:layout_constraintTop_toBottomOf="@+id/update_Parent_info_button" />

</androidx.constraintlayout.widget.ConstraintLayout>