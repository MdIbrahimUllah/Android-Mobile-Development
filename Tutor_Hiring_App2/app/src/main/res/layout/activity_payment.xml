<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <TextView
        android:id="@+id/payment_msg_text_view"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:text="@string/payment_msg_text_view"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

    <TextView
        android:id="@+id/payment_text_view"
        android:layout_width="374dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/payment_msg_text_view"
        app:layout_constraintStart_toStartOf="@+id/payment_msg_text_view"
        app:layout_constraintTop_toBottomOf="@+id/payment_msg_text_view" />

    <TextView
        android:id="@+id/payment_confirmation_text_view"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/payment_text_view"
        app:layout_constraintStart_toStartOf="@+id/payment_text_view"
        app:layout_constraintTop_toBottomOf="@+id/payment_text_view" />

    <TextView
        android:id="@+id/payment_thanks_text_view"
        android:layout_width="269dp"
        android:layout_height="64dp"
        android:layout_marginTop="30dp"
        android:text="@string/payment_thanks_text_view"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/payment_confirmation_text_view"
        app:layout_constraintStart_toStartOf="@+id/payment_confirmation_text_view"
        app:layout_constraintTop_toBottomOf="@+id/payment_confirmation_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>